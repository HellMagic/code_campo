#main
  .container
    .row
      .span16
        %ul.breadcrumb
          %li
            = link_to 'Resources', resources_path
            %span.divider /
          %li
            = link_to @resource.title, @resource
            %span.divider /
          %li.active Post Comment
    .row
      #mainbar.span12
        %section.box
          - if @parent.present?
            %h4 Reply to
            %blockquote= @parent.content
          - else
            %h4 New Comment
          = form_for Comment.new, :url => comments_path(:resource_id => @resource, :parent_id => @parent) do |f|
            .clearfix
              = f.text_area :content, :rows => 5, :class => 'span10'
            .clearfix
              = f.submit 'Post', :class => 'btn primary'
      #sidebar.span4
