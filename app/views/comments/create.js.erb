(function(){
  <% if @parent %>
    var $parent = $('#' + '<%= @parent.anchor %>');
    var comment_list = $parent.siblings('ul');
    if (!comment_list.length) {
      comment_list = $('<ul></ul>').insertAfter($parent);
    }
    var comment = $('<%= escape_javascript(render :partial => 'comments/comment', :object => @comment) %>').hide().prependTo(comment_list).fadeIn();
  <% else %>
    var comment = $('<%= escape_javascript(render :partial => 'comments/comment', :object => @comment) %>').hide().prependTo($('#comments > ul')).fadeIn();
  <% end %>
})();
