#main
  .container
    .row
      #mainbar.span12
        %section#resources.box
          %table.item-list
            %tbody
              = render :partial => 'resources/resource', :collection => @resources
          %footer
            = link_to t('.more_resources'), resources_path
        %section#resources.box
          %table.item-list
            %tbody
              = render :partial => 'topics/topic', :collection => @topics
          %footer
            = link_to t('.more_topics'), topics_path
      #sidebar.span4
        - if logined?
          = render :partial => 'shared/sidebar_profile'
        - else
          = render :partial => 'shared/sidebar_login'
