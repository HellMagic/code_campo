- @page_title = "#{t('.new_reply')} - #{t('.topics')}"

- content_for :head do
  = javascript_include_tag 'editor'
  = stylesheet_link_tag 'editor'

#main
  .container
    .row
      .span16
        %ul.breadcrumb
          %li
            = link_to t('.topics'), topics_path
            %span.divider /
          %li
            = link_to @topic.title, @topic
            %span.divider /
          %li.active= t('.new_reply')
    .row
      #mainbar.span12
        %section#editor.box
          = form_for @reply, :url => replies_path(:topic_id => @topic) do |f|
            = render :partial => 'form', :object => f
            .clearfix= f.submit t('submit'), :class => 'btn primary'
      #sidebar.span4
        = render :partial => 'shared/sidebar_profile'
